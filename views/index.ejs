<h2 class="mt-5 mb-5">Home</h2>
<!-- Carrossel -->
<div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active" data-bs-interval="5000">
      <img src="/img/banner_dia_das_maes.png" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item" data-bs-interval="5000">
      <img src="/img/banner_pascoa.png" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item" data-bs-interval="5000">
      <img src="/img/banner_presente_pais.png" class="d-block w-100" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<!-- Lojas -->
<h2 class="mt-5 mb-5">Lojas</h2>
<!-- Fazer automático com banco -->
<div class="row row-cols-4">  
  <% for (i = 0; i < fornecedores.length ; i++ ) { %>
  <div class="col-6 col-md-4 col-lg-3">
    <div class="card cartao">
      <a href="/loja-unica/<%=fornecedores[i].id%>" class="text-decoration-none text-dark position-relative">
          <% let logo = fornecedores[i].logo.logo%>
          <%if(logo != null) { %>
            <img src="data:<%= fornecedores[i].logo.tipo %>;base64,<%= fornecedores[i].logo.logo.toString('base64')%>" class="img-produto p-2" alt="..." />
          <% } else { %>
            <div>
              Essa loja não tem logo
            </div>
          <% } %>
          <div class="card-body">
            <h5><%=fornecedores[i].nome_fantasia%></h5>
            <button class="btn btn-success">Ver mais</button>
          </div>
      </a>
    </div>
  </div>
  <% } %> 
</div>
