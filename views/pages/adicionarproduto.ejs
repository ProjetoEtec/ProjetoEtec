<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="card mt-4">
    <div class="card-body">
        <form action="" method="post" class="p-2 p-md-4">
            <h2> Adicionar Produtos </h2>
            <div class="mt-3 col-md-6">
                <label for="nomedoproduto">Nome do produto</label>
                <input type="text" name="nomedoproduto" class="form-control">
            </div>
            <div class="mt-3 col-md-6">
                <label>Preço:</label>
                <input type="number" name="preço" class="form-control">
            </div>
            <div class="mt-3 col-md-6">
                <label>Estoque:</label>
                <input type="number" name="estoque" class="form-control">
            </div>
            <div class="mt-3 col-md-6">
                <label for="descricao">Descrição:</label>
                <input type="text" name="descricao" class="form-control">
            </div>
            <h2 class="mt-3">Inserir foto (opcional)</h2>
            <div class="mt-3 d-flex gap-3 input-group-sm">
                <label for="numeroum">1:</label>
                <input type="file" name="" class="form-control" accept="image/*">
            </div>
            <div class="mt-3 d-flex gap-3 input-group-sm">
                <label for="numerodois">2:</label>
                <input type="file" name="" class="form-control" accept="image/*">
            </div>
            <div class="mt-3 d-flex gap-3 input-group-sm">
                <label for="numerotres">3:</label>
                <input type="file" name="" class="form-control" accept="image/*">
            </div>
            <div class="mt-3 d-flex gap-3 input-group-sm">
                <label for="numeroquatro">4:</label>
                <input type="file" name="" class="form-control" accept="image/*">
            </div>
            <div class="mt-3 d-flex gap-3 input-group-sm">
                <label for="numerocinco">5:</label>
                <input type="file" name="" class="form-control" accept="image/*">
            </div>
            <div class="mt-3 d-flex gap-3 input-group-sm">
                <label for="numeroseis">6:</label>
                <input type="file" name="" class="form-control" accept="image/*">
            </div>
            <button class="btn btn-success mt-4" type="submit">Cadastrar produto</button>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>