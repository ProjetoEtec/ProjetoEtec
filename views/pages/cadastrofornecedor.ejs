<%- include('../partials/head') %>
<%- include('../partials/header') %>

<h1 class="mt-4">Minha conta:</h1>
<div class="card container mt-4">
    <div class="card-body">
        <form action="/cliente/cadastro/add" class="container mb-4" method="post">
          <div>
            <div>
                <h2 class="mt-4">Dados pessoais</h2> 
                <div class="mt-3">
                    <label for="nomeRazao">Razão Social</label><br>
                    <input type="" name="nomeRazao" class="mt-2 form-control w-50">
                    <small>Digite a razão social</small>
                </div>
                <div class="mt-3">
                    <label for="nomeFantasia">Nome fantasia</label><br>
                    <input type="text" name="nomeFantasia" class="mt-2 form-control w-50">
                    <small>Digite o nome fantasia </small>
                </div>
                <div class="mt-3">
                    <label for="cnpj">CNPJ</label><br>
                    <input type="text" name="cnpj" class="mt-2 form-control w-50">
                    <small>Digite somente números </small>
                </div>

                <div class="mt-3">
                    <label for="celular">Celular</label><br>
                    <input type="text" name="celular" class="mt-2 form-control w-50">
                    <small>Digite somente números </small>
                </div>
                <div class="mt-3">
                    <label for="dataNasc">Data de Nascimento</label><br>
                    <input type="text" name="dataNasc" class="mt-2 form-control w-50">
                    <small>(dd/mm/aaaa) </small>
                </div>

                <h2 class="mt-4">Dados de acesso</h2> 
                <div class="mt-3">
                    <label for="email">E-mail</label><br>
                    <input type="text" name="email" class="mt-2 form-control w-50">
                    <small>Digite seu e-mail</small>
                </div>
                <div class="mt-3">
                    <label for="emailConfirm">Confirme seu e-mail</label><br>
                    <input type="text" name="emailConfirm" class="mt-2 form-control w-50">
                    <small>Confirme seu e-mail</small>
                </div>
                <div class="mt-3">
                    <label for="senha">Senha</label><br>
                    <input type="text" name="senha" class="mt-2 form-control w-50">
                    <small>Digite sua senha</small>
                </div>
                <div class="mt-3">
                    <label for="senhaConfirm">Confirme sua senha</label><br>
                    <input type="text" name="senhaConfirm" class="mt-2 form-control w-50">
                    <small>Confirme sua senha</small>
                </div>
                <button class="btn btn-success mt-4" type="submit">Cadastrar</button>
          </div>
        </form>
    </div>
</div>






<%- include('../partials/footer') %>