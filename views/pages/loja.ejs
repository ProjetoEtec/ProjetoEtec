<%- include('../partials/head') %>
<%- include('../partials/header') %>

<%let banner = fornecedor.banner.banner;%>
<%let tipoBanner = fornecedor.banner.tipo %>
<% if(fornecedor.banner.banner != null) {%>
<img src="data:<%=tipoBanner%>;base64,<%=banner.toString('base64')%>" alt="banner" class="img-fluid mt-3" style="height:20vh;object-fit: cover;">
<% } else { %>
<div class="container-fluid p-5 bg-light border rounded-3 m-3">
  <h1 class="display">A loja não tem Banner</h1>
</div>
<% } %>
<div class="mt-3 d-flex justify-content-between ">
  <div class="d-flex align-items-center flex-wrap" style="max-width: 70%;">
    <% if(fornecedor.logo.logo != null) { %>
    <img src="data:<%=fornecedor.logo.tipo%>;base64,<%=fornecedor.logo.logo.toString('base64')%>" alt="logo da loja" class="rounded-circle col-3 col-md-2 me-md-3 me-2">
    <% } else { %>
    <div class="bg-light border me-md-3 me-2" style="height:5rem;width: 5rem;">
      <p>A loja não tem logo</p>
    </div>
    <% } %>
    <h2 class="text-wrap">
      <%= fornecedor.nome_fantasia%>
    </h2>
  </div>
  <a class="btn btn-primary align-self-center" style="height: 2.5rem;" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
    Ver mais
  </a>

  <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="offcanvasExampleLabel">Ver mais</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      <div>
        <%=fornecedor.descricao%>
      </div>
    </div>
  </div>
</div>
<h2 class="mt-5 mb-5">Produtos</h2>
<!-- Fazer automático com banco -->
<div class="row row-cols-4">
  <% for(i = 0; i < produtos.length ; i++) { %>
  <div class="col-6 col-md-4 col-lg-3 ">
    <div class="card cartao position-relative">
      <img src="data:<%= produtos[i].fotoProdutos[0].tipo %>;base64,<%= produtos[i].fotoProdutos[0].foto.toString('base64')%>" class="img-produto p-2" alt="..." />
      <div class="card-body">
        <% let nome = produtos[i].nome %>
        <%if(nome.length > 18) { %>
          <h5><%=nome.slice(0,20)%>...</h5>
        <% } else { %>
         <h5><%=nome%></h5>
        <% } %>
        <%const valor = produtos[i].preco %>
        <%const valorFormatado = valor.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' }); %>
        <p><%=valorFormatado%></p>
      </div>
      <div class="card-body position-absolute bottom-0 start-0">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal<%=i%>">
          Ver mais
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal<%=i%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Produto</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <img src="data:<%= produtos[i].fotoProdutos[0].tipo %>;base64,<%= produtos[i].fotoProdutos[0].foto.toString('base64')%>" class="img-fluid p-2" style="object-fit: cover;" alt="..." />
                <p style="display: none;" id="produtoId<%=i%>"><%=produtos[i].id%></p>
                <h4><%=produtos[i].nome%></h4>
                <p>Preço:<%=valorFormatado%></p>
                <p>Estoque:<%=produtos[i].estoque%></p>
                <p><%=produtos[i].descricao%></p>
                <div class="d-flex">
                  <input type="text" class="form-control" style="width: 4rem;" id="produtoQtd<%=i%>">
                  <button class="btn btn-success ms-2">Adicionar ao carrinho</button>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>

<%- include('../partials/footer') %>