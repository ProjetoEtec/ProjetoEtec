<%- include('../partials/head') %>
<%- include('../partials/header') %>

<h1 class="mt-4">Cadastro:</h1>
<div class="card container mt-4">
    <div class="card-body">
        <!-- FORMULÁRIO ATUALIZAR DADOS -->
        <form action="" class="container" method="post">
            <h2 class="mt-4">Dados pessoais</h2> 
            <div class="mt-3">
                <label for="nome-completo">Nome completo:</label><br>
                <input type="text" name="nome-completo" class="mt-2 form-control w-50 ">
                <small>Digite seu nome completo</small>
            </div>
            <div class="mt-3">
                <label for="cpf">CPF:</label><br>
                <input type="text" name="cpf" class="mt-2 form-control w-25"> 
                <small>Digite somente números</small>
            </div>
            <div class="mt-3">
                <label for="celular">Celular</label> <br>
                <input type="text" name="celular" class="mt-2 form-control w-25">
            </div>
            <div class="mt-3">
                <label for="data-nasc">Data de Nascimento:</label> <br>
                <input type="date" class="form-control w-25 mt-2">
            </div>
            <h2 class="mt-4">Dados de acesso</h2>
            <div class="mt-3">
                <label for="email">E-mail</label> <br>
                <input type="text" name="email" class="mt-2 form-control w-50">
            </div>
            <div class="mt-3">
                <label for="confirmacao-email">Confirme seu e-mail</label> <br>
                <input type="text" name="confirmacao-email" class="mt-2 form-control w-50">
            </div>
            <button type="submit" class="btn btn-success mt-4">Cadastrar</button>
        </form>
        <!-- FORMULÁRIO ALTERAR SENHA -->
        <form action="" method="post">
            <div class="mt-3">
                <label for="senha">Senha</label> <br>
                <input type="text" name="senha" class="mt-2 form-control w-25">
            </div>
            <div class="mt-3">
                <label for="confirmacao-senha">Confirme sua senha</label> <br>
                <input type="text" name="confirmacao-senha" class="mt-2 form-control w-25">
            </div>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>