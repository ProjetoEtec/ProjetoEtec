<%- include('../partials/head') %>
<%- include('../partials/header') %>

<h1 class="mt-4">Minha conta</h1>
<div class="card container mt-4">
    <div class="card-body">
        <!-- FORMULÁRIO ATUALIZAR DADOS -->
        <form action="/cliente/update/func" method="post">
            <% if(clientes) { %>
                <h2 class="mt-2">Dados pessoais</h2> 
                <input type="hidden" value="<%=clientes.id%>" name="id">
            <div class="mt-3 col-md-6">
                <label for="nomeCompleto">Nome completo:</label><br>
                <input type="text" name="nome" class="mt-2 form-control" value="<%=clientes.nome%>">
                <small>Digite seu nome completo</small>
            </div>
            <div class="mt-3 col-md-4">
                <label for="cpf">CPF:</label><br>
                <input type="text" name="cpf" class="mt-2 form-control" value="<%=clientes.cpf%>"> 
                <small>Digite somente números</small>
            </div>
            <div class="mt-3 col-md-4">
                <label for="telefone">Telefone</label> <br>
                <input type="text" name="telefone" class="mt-2 form-control" value="<%=clientes.telefone%>">
            </div>
            <div class="mt-3 col-md-4">
                <label for="dataNasc">Data de Nascimento:</label> <br>
                <input type="date" name="nascimento" class="form-control mt-2" value="<%=clientes.nascimento%>">
            </div>
            <h2 class="mt-4">Dados de acesso</h2>
            <div class="mt-3 col-md-6">
                <label for="email">E-mail</label> <br>
                <input type="text" name="email" class="mt-2 form-control" value="<%=clientes.email%>">
            </div>
            <!-- Rota para atualizar senha -->
            <div class="d-flex justify-content-between mt-4">
                <a href=""><button class="btn btn-danger" type="button">Alterar senha</button></a> 
                <a href="/cliente/delete/<%=clientes.id%>"><button type="button" class="btn btn-danger">Deletar conta</button></a>
            </div>
            <button type="submit" class="btn btn-success mt-4">Salvar alterações</button>
            <% } %>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>