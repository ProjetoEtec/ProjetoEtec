<%- include('../partials/head') %>
<%- include('../partials/header') %>

<h1 class="mt-4">Minha conta</h1>
<div class="card container mt-4">
    <div class="card-body">
        <!-- FORMULÁRIO ATUALIZAR DADOS -->
        <form action="" method="post">
            <h2 class="mt-2">Dados pessoais</h2> 
            <div class="mt-3 col-md-6">
                <label for="nomeCompleto">Nome completo:</label><br>
                <input type="text" name="nomeCompleto" class="mt-2 form-control">
                <small>Digite seu nome completo</small>
            </div>
            <div class="mt-3 col-md-4">
                <label for="cpf">CPF:</label><br>
                <input type="text" name="cpf" class="mt-2 form-control"> 
                <small>Digite somente números</small>
            </div>
            <div class="mt-3 col-md-4">
                <label for="telefone">Telefone</label> <br>
                <input type="text" name="telefone" class="mt-2 form-control">
            </div>
            <div class="mt-3 col-md-4">
                <label for="dataNasc">Data de Nascimento:</label> <br>
                <input type="date" name="dataNasc" class="form-control mt-2">
            </div>
            <h2 class="mt-4">Dados de acesso</h2>
            <div class="mt-3 col-md-6">
                <label for="email">E-mail</label> <br>
                <input type="text" name="email" class="mt-2 form-control">
            </div>
            <div class="mt-3 col-md-6">
                <label for="confirmacao-email">Confirme seu e-mail</label> <br>
                <input type="text" name="confirmacao-email" class="mt-2 form-control">
            </div>
            <!-- Rota para atualizar senha -->
            <a href=""><button class="btn btn-danger mt-2" type="button">Alterar senha</button></a> <br>
            <button type="submit" class="btn btn-success mt-4">Cadastrar</button>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>