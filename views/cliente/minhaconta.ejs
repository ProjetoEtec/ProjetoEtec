<%- include('../partials/head') %>
<%- include('../partials/header') %>

<h1 class="mt-4">Cadastro:</h1>
<div class="card container mt-4">
    <div class="card-body">
        <!-- FORMULÁRIO ATUALIZAR DADOS -->
        <form action="/cliente/cadastro/add" class="container" method="post">
            <h2 class="mt-4">Dados pessoais</h2> 
            <div class="mt-3">
                <label for="nomeCompleto">Nome completo:</label><br>
                <input type="text" name="nomeCompleto" class="mt-2 form-control w-50 ">
                <small>Digite seu nome completo</small>
            </div>
            <div class="mt-3">
                <label for="cpf">CPF:</label><br>
                <input type="text" name="cpf" class="mt-2 form-control w-25"> 
                <small>Digite somente números</small>
            </div>
            <div class="mt-3">
                <label for="telefone">Telefone</label> <br>
                <input type="text" name="telefone" class="mt-2 form-control w-25">
            </div>
            <div class="mt-3">
                <label for="dataNasc">Data de Nascimento:</label> <br>
                <input type="date" name="dataNasc" class="form-control w-25 mt-2">
            </div>
            <h2 class="mt-4">Dados de acesso</h2>
            <div class="mt-3">
                <label for="email">E-mail</label> <br>
                <input type="text" name="email" class="mt-2 form-control w-50">
            </div>
            <div class="mt-3">
                <label for="confirmacao-email">Confirme seu e-mail</label> <br>
                <input type="text" name="confirmacao-email" class="mt-2 form-control w-50">
            </div>
            <button type="submit" class="btn btn-success mt-4">Cadastrar</button>
        </form>
        <!-- FORMULÁRIO ALTERAR SENHA -->
        <form action="" method="post">
            <button type="submit" class="btn btn-success mt-4">Salvar</button>
            <h3 class="mt-4 mb-4">Senha:</h3>
            <a href="/"><button class="btn btn-danger">Alterar senha</button></a>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>