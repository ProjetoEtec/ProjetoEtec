<%- include('../partials/head') %>
<%- include('../partials/header') %>
<%- include('../partials/erros') %>
<%- include('../partials/_msg') %>

<h1 class="mt-4">Minha conta</h1>
<div class="card container mt-4">
    <div class="card-body">
        <!-- FORMULÁRIO ATUALIZAR DADOS -->
        <form action="/cliente/update/func" method="post">
            <% if(clientes) { %>
                <h2 class="mt-2">Dados pessoais</h2> 
                <input type="hidden" value="<%=clientes.id%>" name="id">
            <div class="mt-3 col-md-6">
                <label for="nomeCompleto">Nome completo:</label><br>
                <input type="text" name="nome" class="mt-2 form-control" value="<%=clientes.nome%>">
                <small>Digite seu nome completo</small>
            </div>
            <div class="mt-3 col-md-4">
                <label for="cpf">CPF:</label><br>
                <input type="text" name="cpf" class="mt-2 form-control" value="<%=clientes.cpf%>" id="cpf"> 
                <small>Digite somente números</small>
            </div>
            <div class="mt-3 col-md-4">
                <label for="telefone">Telefone</label> <br>
                <input type="text" name="telefone" class="mt-2 form-control" value="<%=clientes.telefone%>" id="telefone">
            </div>
            <div class="mt-3 col-md-4">
                <label for="data_nascimento">Data de Nascimento:</label> <br>
                <input type="text" name="data_nascimento" class="form-control mt-2" value="<%=clientes.data_nascimento%>" id="data_nascimento">
            </div>
            <!-- Rota para atualizar senha -->
            <div class="d-flex justify-content-between mt-4">
                <a href="/update/senha/<%=clientes.id%>"><button class="btn btn-danger" type="button">Alterar senha</button></a> 
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Deletar conta
                </button>    
            </div>

            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Exclusão de conta</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      Tem certeza?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-success" data-bs-dismiss="modal">Não</button>
                      <a href="/cliente/delete/<%=clientes.id%>"><button type="button" class="btn btn-danger">Sim</button></a>
                    </div>
                  </div>
                </div>
              </div>

            
            <button type="submit" class="btn btn-success  mt-4">Salvar alterações</button>
            <% } %>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>