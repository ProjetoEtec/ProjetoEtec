<%- include('../partials/head') %>
<%- include('../partials/header') %>

<h1 class="mt-4">Minha conta</h1>
<div class="card container mt-4">
    <div class="card-body">
        <!-- FORMULÁRIO ATUALIZAR DADOS -->
        <form action="" method="post">
            <h2 class="mt-2">Dados pessoais</h2>
            <div class="mt-3 col-md-6">
                <label for="razaoSocial">Razão Social:</label><br>
                <input type="text" name="nomeCompleto" class="mt-2 form-control">
                <small>Digite a razão social</small>
            </div>
            <div class="mt-4 col-md-4">
                <label for="nomeFantasia">Nome Fantasia:</label><br>
                <input type="text" name="nomeCompleto" class="mt-2 form-control">
                <small>Digite o nome fantasia </small>
            </div>
            <div class="mt-3 col-md-4">
                <label for="cnpj">CNPJ:</label> <br>
                <input type="text" name="cnpj" class="mt-2 form-control">
                <small> Digite somente  números</small>
            </div>
            <div class="mt-3 col-md-4">
                <label for="celular">Celular:</label> <br>
                <input type="numero" name="celular" class="form-control mt-2">
                <small>Digite somente números</small>
            </div>
                <div class="mt-4 col-md-4">
                    <label for="endereco">Endereço:</label><br>
                    <input type="text" name="endereco" class="mt-2 form-control">
                    <small>Digite o seu endereço</small>
                </div>
                
                <button type="submit" class="btn btn-success  mt-4">Salvar</button>
            </div>

            <h2 class="mt-4">Dados de acesso</h2>
            <div class="mt-3 col-md-6">
                <label for="email">E-mail</label> <br>
                <input type="text" name="email" class="mt-2 form-control">
                <small>Digite seu e-mail</small>
            </div>
            <div class="mt-3 col-md-6">
                <label for="confirmacao-email">Confirme seu e-mail</label> <br>
                <input type="text" name="confirmacao-email" class="mt-2 form-control">
                <small> confirme seu e-mail</small>
            </div>
            <div class="mt-3 col-md-4">
                <label for="senha">Senha</label><br>
                <input type="text" name="senha" class="mt-2 form-control">
                <small>Digite sua senha</small>
            </div>


            <!-- Rota para atualizar senha -->
            <a href=""><button class="btn btn-danger mt-2" type="button">Alterar senha</button></a> <br>
            
        </form>
    </div>
</div>

